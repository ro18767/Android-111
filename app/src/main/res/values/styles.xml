<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="game_tic_tac_toe_background" parent="calc_btn">
        <item name="android:background">@drawable/game_tic_tac_toe_background_shape</item>
    </style>
    <style name="game_tic_tac_toe_cell_btn" parent="calc_btn">
        <item name="android:background">@drawable/game_tic_tac_toe_cell_btn_shape</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textSize">64sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="calc_btn" >
        <item name="backgroundTint">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/calc_primary_color</item>
    </style>

    <style name="calc_operation_btn" parent="calc_btn">
        <item name="android:background">@drawable/calc_oper_btn_shape</item>
    </style>

    <style name="calc_digit_btn" parent="calc_btn">
        <item name="android:background">@drawable/calc_digit_btn_shape</item>
    </style>

    <style name="calc_equal_btn" parent="calc_btn">
        <item name="android:background">@drawable/calc_equal_btn_shape</item>
        <item name="android:textColor">@color/calc_background</item>
    </style>

    <style name="game_labels">
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>